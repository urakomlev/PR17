<Window x:Class="KomlevIntertaiment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KomlevIntertaiment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="400">
            <Grid>
                <TextBox TextWrapping="Wrap" Text="Клиенты" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10,0,0"/>
                <Ellipse HorizontalAlignment="Right" Height="20" Stroke="Black" VerticalAlignment="Top" Width="20" Margin="0,10,5,0"/>
                <Ellipse HorizontalAlignment="Right" Height="19" Stroke="Black" VerticalAlignment="Top" Width="20" Margin="0,10,30,0"/>
                <Ellipse HorizontalAlignment="Right" Height="19" Stroke="Black" VerticalAlignment="Top" Width="20" Margin="0,10,55,0"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="KomlevInteratiment" VerticalAlignment="Top" Margin="35,40,0,0"/>
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Список клиентов" VerticalAlignment="Top" Margin="0,60,0,0"/>
                <DataGrid x:Name="DataGridOrder" d:ItemsSource="{d:SampleData ItemCount=5}" VerticalAlignment="Center" Margin="25,0,25,0" Width="448" MaxWidth="448" MaxHeight="200" Height="200"/>
            </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Right" Width="150" VerticalAlignment="Center" Height="400">
            <Grid>
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="First name" VerticalAlignment="Top"/>
                <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="0,20,0,0"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" Text="Last name" VerticalAlignment="Top"/>
                <TextBox x:Name="LastNameTextBox" HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="Gender" VerticalAlignment="Top"/>
                <TextBox x:Name="GenderTextBox" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,120,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top"/>
                <TextBox x:Name="AdressTextBox" HorizontalAlignment="Center" Margin="0,140,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,160,0,0" TextWrapping="Wrap" Text="City" VerticalAlignment="Top"/>
                <TextBox x:Name="CityTextBox" HorizontalAlignment="Center" Margin="0,180,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,200,0,0" TextWrapping="Wrap" Text="Phone" VerticalAlignment="Top"/>
                <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Center" Margin="0,220,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,240,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
                <TextBox x:Name="EmailTextBox" HorizontalAlignment="Center" Margin="0,260,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,280,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top"/>
                <TextBox x:Name="StatusTextBox" HorizontalAlignment="Center" Margin="0,300,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <Button Content="Добавить" VerticalAlignment="Bottom" Padding="25,10,25,10" Background="#FF0C0D5A" Foreground="White" HorizontalAlignment="Center" Click="AddButton_Click" Margin="0,0,0,20"/>
            </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Width="150" VerticalAlignment="Center" Height="200">
            <Grid>
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="id" VerticalAlignment="Top"/>
                <TextBox x:Name="ClientIDTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="0,20,0,0"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" Text="Имя редактируемого поля" VerticalAlignment="Top"/>
                <TextBox x:Name="ColumnNameTextBox" HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="Новый параметр" VerticalAlignment="Top"/>
                <TextBox x:Name="NewParameterTextBox" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <Button Content="Редактировать" VerticalAlignment="Bottom" Padding="25,10,25,10" Background="#FF0C0D5A" Foreground="White" HorizontalAlignment="Center" Click="EditButton_Click" Margin="0,0,0,20"/>
            </Grid>
        </Border>

    </Grid>
</Window>
